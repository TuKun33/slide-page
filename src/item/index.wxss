
.slide {
  transition: 0.2s opacity;
  padding: 0 30rpx;
}

.header {
  display: flex;
  padding: 30rpx;
  align-items: center;
  color: #fff;
}

.body .header {
  padding: 30rpx 0;
}

.avatar {
  width: 86rpx;
  height: 86rpx;
  border: 6rpx solid #fff;
  border-radius: 100%;
  margin-right: 20rpx;
	overflow: hidden;
}

.avatar image {
	display: block;
	width: 100%;
	height: 100%;
}

.body {
  padding: 30rpx;
  border-radius: 15rpx;
  background-color: #fff;
}

.slide .body {
  transition: 0.2s ease-in;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.3);
}

.cover {
  width: 100%;
  border-radius: 15rpx;
  max-height: 339rpx;
}

.footer {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 30rpx;
}

.footer image {
  width: 100%;
  display: block;
	height: 96rpx;
}

.en-title {
  font-size: 45rpx;
  font-weight: 700;
  line-height: 1.4;
  color: #333;
  white-space: pre-wrap;
  /* word-break:keep-all; */
  word-wrap: break-word;
}

.zh-title {
  color: #555;
  font-size: 32rpx;
  line-height: 1.4;
}